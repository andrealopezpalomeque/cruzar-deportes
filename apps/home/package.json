{
  "name": "nuxt-app",
  "type": "module",
  "private": true,
  "packageManager": "npm@11.3.0",
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "clean": "rm -rf .nuxt .output node_modules/.cache node_modules/.vite",
    "clean:dev": "npm run clean && npm run dev",
    "clean:all": "npm run clean && rm -rf node_modules",
    "firebase:build": "nuxt generate",
    "firebase:deploy": "cd ../.. && firebase deploy --only hosting:storefront",
    "firebase:build-deploy": "npm run firebase:build && npm run firebase:deploy",
    "migrate:cloudinary": "node scripts/migrateToCloudinary.js",
    "retry:failed-uploads": "node scripts/retryFailedUploads.js"
  },
  "dependencies": {
    "@cruzar/shared": "file:../../packages/shared",
    "@iconify/vue": "^5.0.0",
    "@nuxtjs/cloudinary": "^4.0.0",
    "@nuxtjs/tailwindcss": "^6.14.0",
    "@pinia/nuxt": "^0.11.3",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@vueuse/nuxt": "^14.0.0",
    "cloudinary": "^2.8.0",
    "dayjs-nuxt": "^2.1.11",
    "dotenv": "^17.2.3",
    "nuxt": "^4.2.1",
    "pinia": "^3.0.4",
    "unplugin-icons": "^22.5.0",
    "vue": "^3.5.24",
    "vue-router": "^4.6.3",
    "vue3-toastify": "^0.2.8"
  },
  "devDependencies": {
    "@iconify/json": "^2.2.406",
    "@iconify/utils": "^3.0.2",
    "autoprefixer": "^10.4.22",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.16"
  }
}
